<section>
    <div class="container mt-4">

        <a href="/admin/add-product" class="btn btn-success pb-2 ">Add Products</a><br>


        <table class="table display" id="productid">
            
            <thead>
                
                <tr>
                    {{!-- <th scope="col">#</th> --}}
                    <th scope="col">Names</th>
                    <th scope="col">Category</th>
                     <th scope="col">Sub Category</th>
                     <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                
                {{#each products}}
                    <tr>
                        {{!-- <th scope="row">1</th> --}}
                        <td>{{ Name }}</td>
                        <td>{{ Category }}</td>
                        <td>{{ SubCategory }}</td>
                         <td>{{ price }}</td>
                        <td>{{ description }}</td>
                        <td><img style="height: 4rem; width: 3rem;" src="images/{{this._id}}.jpg" alt=""/></td>
                        {{!-- <td>
                            <a href="/admin/edit-image/{{this._id}}" class="btn btn-primary">Edit images</a>
                        </td> --}}
                         

                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
                        </td>
                        <td>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are You want to delete this item {{ this.item}}')">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>


