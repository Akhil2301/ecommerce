</a>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Select Address</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      
        <div class="addressbook">
                <a href="/add-address">
                      + Add New Address
                </a>
              <input type="hidden" name="tot" id="userId" value="{{user._id}}"> 
                
        </div>
        </div>
        <form action="/place-orders" id="addressSelection" method="post" >

         <div class="addressList mCustomScrollbar _mCS_7 mCS_no_scrollbar">
          <div id="mCSB_7" class="mCustomScrollBox mCS-AS-theme mCSB_vertical mCSB_inside" tabindex="0"
            style="max-height: none;">
            <div id="mCSB_7_container" class="mCSB_container mCS_y_hidden mCS_no_scrollbar_y"
                style="position:relative; top:0; left:0;" dir="ltr">
                
                {{#each address}} 
                <div class="address">
                    <div class="addressSelectionBlock clearfix">
                        <input type="radio" name="selectAddress" id="{{_id}}" value="{{_id}}"
                            class="radiobox-custom" {{check}} >
                        <label>
                            <span class="AddressName">
                            </span>
                        </label>
                        <span class="AddressTitle">{{saveaddress}}</span>
                        <div class="details">
                            <p class="fullAddress">{{address}}{{zip}}</p>
                            {{!-- <input type="hidden" name="selectAddressName" id="addressName3723644" value="{{address}}">
                            <input type="hidden" name="selectAddress" id="addressDetaisls3723644"
                                value="{{address}}"> --}}
                        </div>
                    </div>
                    <div class="action">
                        <a href="#" class="deleteAddress" >Delete</a>
                        <a href="#" class="editAddress" >Edit</a>
                    </div>
                </div>
                {{/each}}
            </div>
            <div id="mCSB_7_scrollbar_vertical"
                class="mCSB_scrollTools mCSB_7_scrollbar mCS-AS-theme mCSB_scrollTools_vertical" style="display: none;">
                <div class="mCSB_draggerContainer">
                    <div id="mCSB_7_dragger_vertical" class="mCSB_dragger"
                        style="position: absolute; min-height: 30px; top: 0px; height: 0px;">
                        <div class="mCSB_dragger_bar" style="line-height: 30px;"></div>
                        <div class="mCSB_draggerRail"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit"  class="btn btn-primary">Deliver Here</button>
      </div>
</form>
      </div>
      
    </div>
  </div> 
</div>

